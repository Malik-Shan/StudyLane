<!DOCTYPE html>
<html>
<head>
<title>Likes Finder</title>
</head>
<body>
		<div id='result'>
			<h2>Likes Code: <span class='val'>2528</span></h2>
			<h2>Views Code: <span class='val'>91</span></h2>
		</div>
		<form id="likes_finder">
			<div>
				<label for='likes'>Total Likes</label>
				<input name='likes' type='number' id='likes' required/>
			</div>
			<div>
				<label for='time'>Total Time(hr)</label>
				<input name='time' type='number' id='time' required/>
			</div>
			<button type='submit'>Submit</button>
		</form>
		<div id='result'>
			<h2>Quantity: <span id="qty" class='val'>0</span></h2>
			<h2>Runs: <span id="runs" class='val'>0</span></h2>
			<h2>Interval(min): <span id="int" class='val'>0</span></h2>
		</div>
</body>
</html>
<style>
*, *::before, *::after {
	box-sizing: border-box;
}
body{
	padding-block:.5rem;
	background-color:black;
}
/*
2. Remove default margin
*/
* {
	margin: 0;
}
button[type='submit']{
	outline:none;
	background:skyblue;
	padding:.4rem .8rem;
	border-radius:10px;
	font-size:1.3rem;
	font-weight:600;
	color:darkblue;
	cursor:pointer;
}
#likes_finder{
	background-color:gray;
	display:flex;
	align-items:center;
	justify-content:center;
	gap:1rem;
	padding:1rem;
	border-radius:10px;
	margin:1rem;
}
#likes_finder label{
	margin-right:15px;
	font-size:1.5rem;
	font-weight:bold;
}
#likes_finder input{
	font-size:1.3rem;
	border-radius:5px;
	outline:none;
	border:0px;
	padding:.5rem;
}
#result{
	display:flex;
	flex-direction:row;
	justify-content:center;
	gap:1rem;
	align-items:center;
}
h2{
	color:white;
}
#result h2 span{
	display:inline-block;
	background-color:orange;
	padding:.5rem;
	cursor:pointer;
	border-radius:10px;
	color:#581845;
	transition:200ms ease-in;
}
#result h2 span:hover{
	background-color:#CD7F32;
}
#result h2 span.copied{
	background-color:#4CBB17;
	color:#023020;
}
h3{
	color:#6082B6;
}
h3 span{
	display:inline-block;
}
</style>
<script is:inline>
const Form = document.querySelector("#likes_finder");
Form.addEventListener("submit",(e) => {
	e.preventDefault();
	const fd = new FormData(Form);
	const likes = parseInt(fd.get("likes"));
	const time = parseInt(fd.get("time"));
	const data = runFinder(likes,time);
	const qty = document.querySelector("#qty");
	const runs = document.querySelector("#runs");
	const int = document.querySelector("#int");
	qty.innerHTML = data.qty;
	runs.innerHTML = data.runs;
	int.innerHTML = data.int;
});
document.querySelectorAll(".val").forEach((i) => {
	i.addEventListener("click",(e) => {
		if(!navigator.clipboard){
			console.log('error');
		};
		const v = parseInt(e.target.innerHTML);
		navigator.clipboard.writeText(v);
		e.target.classList.add("copied");
		setTimeout(() => {
			e.target.classList.remove("copied");
			},1500)
	})
});
function runFinder(tLikes,tTime){
	let factor = factorFinder(tLikes);
	if(factor === null) return;
	const runs = tLikes / factor;
	const time = (tTime * 60) / runs;
	return {qty:factor,runs,int:time};
};
function factorFinder(tLikes){
	for(let i=5;i<=7000;i++){
		if(tLikes % i === 0){
			return i;
		};
	};
	return null;
};
</script>
