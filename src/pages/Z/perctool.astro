<!DOCTYPE html>
<html>
<head>
<title>Percentage Tool</title>
</head>
<body>
		<form id="perc">
			<label for='value'>Value</label>
			<input name='value' type='number' id='value' required/>
		</form>
		<div id='result'>
			<h3>Followers : <span id='followers'>0</span></h3>
			<h2>59%: <span id="fi" class='val'>0</span></h2>
			<h2>41%: <span id="fo" class='val'>0</span></h2>
		</div>
</body>
</html>
<style>
*, *::before, *::after {
	box-sizing: border-box;
}
body{
	background-color:black;
}
/*
2. Remove default margin
*/
* {
	margin: 0;
}
#perc{
	background-color:gray;
	display:flex;
	align-items:center;
	justify-content:center;
	padding:1rem;
	border-radius:10px;
	margin:1rem;
}
#perc label{
	margin-right:15px;
	font-size:1.5rem;
	font-weight:bold;
}
#perc input{
	font-size:1.3rem;
	border-radius:5px;
	outline:none;
	border:0px;
	padding:.5rem;
}
#result{
	display:flex;
	gap:1rem;
	align-items:center;
	flex-direction:column;
}
h2{
	color:white;
}
#result h2 span{
	display:inline-block;
	background-color:orange;
	padding:.5rem;
	cursor:pointer;
	border-radius:10px;
	color:#581845;
	transition:200ms ease-in;
}
#result h2 span:hover{
	background-color:#CD7F32;
}
#result h2 span.copied{
	background-color:#4CBB17;
	color:#023020;
}
h3{
	color:#6082B6;
}
h3 span{
	display:inline-block;
}
</style>
<script is:inline>
const Form = document.querySelector("#perc");
Form.addEventListener("submit",(e) => {
	e.preventDefault();
	const fd = new FormData(Form);
	const followers = parseInt(fd.get("value"));
	const fi = Math.round(followers * .59);
	const fo = Math.round(followers * .41);
	const FI = document.querySelector("#fi");
	const FO = document.querySelector("#fo");
	const TF = document.querySelector("#followers");
	FI.innerHTML = fi;
	FO.innerHTML = fo;
	TF.innerHTML = followers;
})
document.querySelectorAll(".val").forEach((i) => {
	i.addEventListener("click",(e) => {
		if(!navigator.clipboard){
			console.log('error');
		};
		const v = parseInt(e.target.innerHTML);
		navigator.clipboard.writeText(v);
		e.target.classList.add("copied");
		setTimeout(() => {
			e.target.classList.remove("copied");
			},1500)
	})
});
</script>
