---
import type {Pagination} from '../lib/interface.ts';
const {page} = Astro.props as {page:Pagination};
---
<div class='pagination'>
	{page.url.prev ? 
	<a href={page.url.prev} class='btn left' href='/'>Previous<span class='pageNum'>Page {page.currentPage - 1}</span></a>
	:
	null
	}
	{page.url.next ?
	<a href={page.url.next} class='btn' href='/'>Next<span class='pageNum'>Page {page.currentPage + 1}</span></a>
	:
	null}
</div>
