---
const {driveId,name,type} = Astro.props;
---
<div class='mb-4 flex flex-row flex-wrap gap-2 justify-center items-center'>
	<a class='primaryBtn p-2 px-4 border rounded-md' download={`${name}.${type}`} href={`https://drive.google.com/uc?export=download&id=${driveId}`}>Download</a>
	<a class='primaryBtn p-2 px-4 border rounded-md' target="_blank" href={`https://drive.google.com/file/d/${driveId}/view`}>View</a>
</div>
<iframe class='mx-auto mb-4 border rounded-md' src={`https://drive.google.com/file/d/${driveId}/preview`} width="640" height="800" allow="autoplay"></iframe>
