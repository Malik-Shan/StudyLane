---
const {title} = Astro.props;
---
<header class='shadow-sm shadow-slate-200 bg-white'>
  <div class='wrapper flex flex-row justify-between items-center h-[65px] max-w-[1536px]
  mx-auto py-3.5 px-6 max-sm:px-3'>
    <a href='#' class='logo'>
      <img class='max-h-[40px] max-sm:hidden' src='/assests/images/official/logo.png' />
      <img class='max-h-[45px] hidden max-sm:block' src='/assests/images/official/logo2.png' />
    </a>

    <h2 class='pageTitle font-extralight text-4xl text-slate-700'>{title}</h2>

    <div class='w-[70px] h-full bg-slate-400 rounded-full animate-pulse'
      hx-get='/partials/loginBtn'
      hx-swap='outerHTML'
      hx-trigger='load'
    ></div>
  </div>
</header>
