{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.publicFolder": {
    "path": "src/assets",
    "relative": true
  },
  "frontMatter.content.pageFolders": [
    {
      "title": "Discrete Structures",
      "path": "[[workspace]]/src/content/subjects/discrete-structures",
      "filePrefix": "",
      "contentTypes": ["subjects"]
    },
    {
      "title": "English",
      "path": "[[workspace]]/src/content/subjects/functional-english",
      "filePrefix": "",
      "contentTypes": ["subjects"]
    },
    {
      "title": "IT",
      "path": "[[workspace]]/src/content/subjects/application-of-information-and-communication-technologies",
      "filePrefix": "",
      "contentTypes": ["subjects"]
    },
    {
      "title": "Programming",
      "path": "[[workspace]]/src/content/subjects/programming-fundamentals",
      "filePrefix": "",
      "contentTypes": ["subjects"]
    },
    {
      "title": "Islamiat",
      "path": "[[workspace]]/src/content/subjects/islamic-studies",
      "filePrefix": "",
      "contentTypes": ["subjects"]
    },
    {
      "title": "Guide",
      "path": "[[workspace]]/src/content/subjects/guide",
      "filePrefix": "",
      "contentTypes": ["guide"]
    },
    {
      "title": "News",
      "path": "[[workspace]]/src/content/news",
      "filePrefix": "",
      "contentTypes": ["news"]
    }
  ],
  "frontMatter.taxonomy.fieldGroups": [
    {
      "id": "book",
      "labelField": "name",
      "fields": [
        {
          "title": "Book",
          "name": "book",
          "type": "fields",
          "fields": [
            {
              "title": "Name",
              "name": "name",
              "type": "string",
              "single": true,
              "default": "",
              "required": true
            },
            {
              "title": "Edition",
              "name": "edition",
              "type": "string",
              "single": true,
              "default": "",
              "required": true
            },
            {
              "title": "Author",
              "name": "author",
              "type": "string",
              "default": "",
              "required": true
            },
            {
              "title": "Link",
              "name": "link",
              "type": "string",
              "single": true,
              "default": "",
              "required": true
            }
          ]
        }
      ]
    },
    {
      "id": "recommendedbook",
      "labelField": "name",
      "fields": [
        {
          "title": "Book",
          "name": "book",
          "type": "fields",
          "fields": [
            {
              "title": "Name",
              "name": "name",
              "type": "string",
              "single": true,
              "default": "",
              "required": true
            },
            {
              "title": "Edition",
              "name": "edition",
              "type": "string",
              "single": true,
              "default": "",
              "required": true
            },
            {
              "title": "Author",
              "name": "author",
              "type": "string",
              "default": "",
              "required": true
            }
          ]
        }
      ]
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "subjects",
      "previewPath": "'subjects'",
      "pageBundle": false,
      "clearEmpty": false,
      "fields": [
        {
          "title": "Draft",
          "name": "draft",
          "type": "boolean",
          "default": false
        },
        {
          "title": "Title",
          "name": "title",
          "required": true,
          "default": "",
          "type": "string",
          "single": true
        },
        {
          "title": "Banner URL",
          "name": "bannerImg",
          "required": true,
          "default": "",
          "type": "string",
          "single": true
        },
        {
          "title": "Banner Preview",
          "name": "bannerImg",
          "type": "image",
          "default": "",
          "isPreviewImage": true
        },
        {
          "title": "Date",
          "name": "date",
          "required": true,
          "default": "{{now}}",
          "type": "datetime"
        },
        {
          "title": "Tags",
          "name": "tag",
          "required": true,
          "default": [],
          "type": "tags"
        },
        {
          "title": "Subject",
          "name": "subject",
          "required": true,
          "type": "choice",
          "default": "",
          "choices": [
            "",
            "Calculus & Analytic Geometry",
            "English Composition & Comprehension",
            "Introduction To Computing Application",
            "Islamic Studies & Ethics",
            "Programming Fundamentals"
          ]
        },
        {
          "title": "Semester",
          "name": "semester",
          "required": true,
          "type": "choice",
          "default": "",
          "choices": ["", "S1", "S2", "S3", "S4", "S5"]
        },
        {
          "title": "Info Type",
          "name": "infoType",
          "required": true,
          "default": "",
          "type": "choice",
          "choices": ["", "lecture", "notes", "blog"]
        }
      ]
    },
    {
      "name": "guide",
      "previewPath": "'guide'",
      "pageBundle": false,
      "clearEmpty": false,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "single": true,
          "default": "",
          "required": true
        },
        {
          "title": "Image",
          "name": "image",
          "type": "string",
          "single": true,
          "default": "",
          "required": true
        },
        {
          "title": "Preview",
          "name": "image",
          "type": "image"
        },
        {
          "title": "Outline",
          "name": "outline",
          "type": "list",
          "required": true,
          "default": []
        },
        {
          "title": "Recommended Books",
          "name": "recommended_books",
          "type": "block",
          "fieldGroup": ["recommendedbook"],
          "default": []
        },
        {
          "title": "Books PDF",
          "name": "books",
          "type": "block",
          "default": [],
          "fieldGroup": ["book"]
        }
      ]
    },
    {
      "name": "news",
      "previewPath": "'news'",
      "pageBundle": false,
      "clearEmpty": false,
      "fields": [
        {
          "title": "Draft",
          "name": "draft",
          "type": "boolean",
          "default": false
        },
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "single": true,
          "required": true,
          "default": ""
        },
        {
          "title": "Banner Image",
          "name": "bannerImg",
          "type": "string",
          "required": true,
          "default": "",
          "single": true
        },
        {
          "title": "Banner Image Preview",
          "name": "bannerImg",
          "type": "image"
        },
        {
          "title": "Category",
          "name": "category",
          "type": "tags",
          "required": true,
          "default": []
        },
        {
          "title": "Date",
          "name": "date",
          "type": "datetime",
          "required": true,
          "default": "{{now}}"
        },
        {
          "title": "Position",
          "name": "position",
          "type": "string",
          "default": "admin",
          "required": true
        }
      ]
    }
  ]
}
